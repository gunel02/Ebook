<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="8dp"
android:layout_marginVertical="8dp">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/bookshelf_cardView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:cardCornerRadius="16dp"
    app:layout_constraintBottom_toTopOf="@+id/bookshelf_titleText"
    app:layout_constraintDimensionRatio="1:1.39"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/white"
    app:strokeWidth="0dp">

    <ImageView
        android:id="@+id/bookshelf_coverImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/test_book_image" />

</com.google.android.material.card.MaterialCardView>

<TextView
    android:id="@+id/bookshelf_titleText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:fontFamily="@font/regular"
    android:text="@string/text_book_title"
    android:textColor="@color/gray_color"
    android:textSize="14sp"
    android:layout_marginBottom="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bookshelf_cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>
